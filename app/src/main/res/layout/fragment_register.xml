<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="280dp"
        android:layout_height="190dp"
        android:gravity="center"
        android:text="Zarejestruj się"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:background="@drawable/white_rectangle_rounded"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/baseline_person_outline"
        android:hint="@string/Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_first" />

    <EditText
        android:id="@+id/inputName"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:background="@drawable/white_rectangle_rounded"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/baseline_person_outline"
        android:hint="@string/Username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail" />

    <EditText
        android:id="@+id/inputPassword2"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:background="@drawable/white_rectangle_rounded"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName|textPassword"
        android:maxLines="1"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/baseline_info"
        android:hint="@string/Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputName" />

    <EditText
        android:id="@+id/inputPassword2Repeat"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:background="@drawable/white_rectangle_rounded"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName|textPassword"
        android:maxLines="1"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/baseline_info"
        android:hint="@string/Password2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPassword2" />

